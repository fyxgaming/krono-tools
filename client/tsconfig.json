{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "types": [
      "node",
      "svelte"
    ],
    "typeRoots": [
      "./@types",
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "importsNotUsedAsValues": "remove",
    "sourceMap": true
  }
}