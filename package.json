{
  "name": "@kronoverse/tools",
  "version": "0.2.20",
  "description": "Tools for interacting with the Kronoverse Platform",
  "private": false,
  "main": "index.js",
  "scripts": {
    "build": "tsc -p .",
    "deploy:infra": "ts-node ./bin/deploy --app=kronoverse --src=jigs --env=infra",
    "deploy:dev": "ts-node ./bin/deploy --app=kronoverse --src=jigs --env=dev",
    "deploy:test": "ts-node ./bin/deploy --app=kronoverse --src=jigs --env=test",
    "deploy:prod": "ts-node ./bin/deploy --app=kronoverse --src=jigs --env=prod",
    "postinstall": "npm run build",
    "prepare": "npm run build",
    "start:mock": "ts-node mock/server.ts"
  },
  "bin": {
    "krono-deploy": "./bin/deploy.js"
  },
  "files": [
    "**/*"
  ],
  "dependencies": {
    "@runonbitcoin/release": "file:runonbitcoin-release-0.5.35.tgz",
    "@types/node": "^13.5.2",
    "argon2-browser": "^1.13.0",
    "body-parser": "^1.19.0",
    "bsv": "^2.0.0-beta.41",
    "bsv-legacy": "npm:bsv@^1.5.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "http-errors": "^1.7.3",
    "ioredis": "^4.17.3",
    "minimist": "^1.2.0",
    "node-fetch": "^2.6.0",
    "simple-git": "^2.11.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/http-errors": "^1.6.3",
    "@types/ioredis": "^4.17.2",
    "@types/minimist": "^1.2.0",
    "@types/node-fetch": "^2.5.7",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0"
  },
  "bundledDependencies": [
    "@runonbitcoin/release"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "David Case",
  "license": "MIT"
}
